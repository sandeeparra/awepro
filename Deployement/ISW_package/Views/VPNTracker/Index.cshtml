@model IEnumerable<ISW_Dashboard.Models.ProjectVPN>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.projectname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.customername)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.projectdetail)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.projectowner)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.currentsummary)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.nextsteps)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.status)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    var dStatus = (Dictionary<string, string>)ViewData["Status"];
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.projectname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.customername)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.projectdetail)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.projectowner)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.currentsummary)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nextsteps)
        </td>
        <td>
            @Html.DisplayFor(modelItem => @dStatus[(item.status ?? "").ToString()])
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
